--avg
select avg(id) from student;

--COUNT
select COUNT(*) from student where hhh = 3;

--max
select MAX(id) from student;

--MIN
select MIN(id) from student;

--SUM
select SUM(id) from student;

--group by
select tea_id,max(age) from student group by tea_id order by sum(age) desc;

select count(name),age from student group by age;

select tea_id,sum(age) from student group by age,tea_id;

select sum(age) from student group by tea_id having sum(age)>40;


select * from student;
select t.*,rowid from student t;
